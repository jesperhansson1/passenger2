<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/pad_20dp"
    android:background="@drawable/dialog_corner_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/label_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_5dp"
            android:layout_marginStart="@dimen/pad_5dp"
            android:text="@string/ride"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_2dp"
            android:background="@color/colorBlue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pad_5dp"
            android:layout_marginTop="@dimen/pad_5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_startLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pad_20dp"
                android:layout_marginTop="@dimen/pad_2dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="@string/start_location"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_startLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pad_2dp"
                android:layout_weight="1"
                android:gravity="start|center" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_1dp"
            android:background="@color/colorLightBlue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/pad_5dp"
            android:layout_marginTop="@dimen/pad_5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_endLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pad_20dp"
                android:layout_marginTop="@dimen/pad_2dp"
                android:gravity="start|center"
                android:text="@string/end_location"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_endLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pad_2dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/pad_5dp">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/pad_5dp"
                android:layout_weight="1"
                android:background="@drawable/button_border_round"
                android:text="@android:string/cancel"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/pad_12sp" />

            <Button
                android:id="@+id/button_ride"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/pad_5dp"
                android:layout_weight="1"
                android:background="@drawable/button_corner_round"
                android:textColor="@color/colorWhite"
                tools:text="@string/create_ride"
                android:textSize="@dimen/pad_12sp" />


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>