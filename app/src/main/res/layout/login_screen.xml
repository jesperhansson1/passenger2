<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/passenger_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/pad_12dp"
        android:layout_marginStart="@dimen/pad_12dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/textview_loginscreen_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email" />

        <EditText
            android:id="@+id/edittext_loginscreen_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:drawablePadding="@dimen/pad_10dp"
            android:drawableStart="@drawable/mail"
            android:hint="@string/mail_example"
            android:inputType="textPersonName"
            android:padding="@dimen/pad_5dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_normal" />


        <TextView
            android:id="@+id/textview_loginscreen_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinputlayout_loginscreen_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_loginscreen_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="@dimen/pad_10dp"
                android:drawableStart="@drawable/lock"
                android:hint="@string/security"
                android:inputType="textPassword"
                android:padding="@dimen/pad_2dp" />
        </android.support.design.widget.TextInputLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_loginscreen_forgotpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_2dp"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:padding="@dimen/pad_2dp"
                android:text="@string/forgot_password" />

            <Button
                android:id="@+id/button_loginscreen_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_2dp"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:padding="@dimen/pad_2dp"
                android:text="@string/signup" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_normal" />

        <Button
            android:id="@+id/button_loginscreen_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_corner_round"
            android:text="@string/login"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>