<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/label_passenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_none"
        android:layout_marginEnd="@dimen/activity_margin_half"
        android:layout_weight="1"
        android:text="@string/passenger"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="@+id/switch_ride"
        app:layout_constraintEnd_toStartOf="@+id/switch_ride"
        app:layout_constraintTop_toTopOf="@+id/switch_ride" />

    <Switch
        android:id="@+id/switch_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_half"
        android:layout_weight="1"
        android:theme="@style/switch_passenger_driver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_none"
        android:layout_marginStart="@dimen/activity_margin_half"
        android:layout_weight="1"
        android:text="@string/driver"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="@+id/switch_ride"
        app:layout_constraintStart_toEndOf="@+id/switch_ride"
        app:layout_constraintTop_toTopOf="@+id/switch_ride" />
</android.support.constraint.ConstraintLayout>